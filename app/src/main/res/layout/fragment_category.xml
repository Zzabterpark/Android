<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="24dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onCategoryClick">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_musical"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뮤지컬"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onCategoryClick">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_concert"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="콘서트"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onCategoryClick">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_theater"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연극"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onCategoryClick">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_classic"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="클래식/무용"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onCategoryClick">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_sports"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스포츠"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"/>
            </LinearLayout>
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/ranking_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="랭킹"
                android:textStyle="bold"
                android:layout_weight="1"
                android:backgroundTint="#FC5230"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="티켓오픈"
                android:textStyle="bold"
                android:layout_weight="1"
                android:backgroundTint="#FC5230"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="공연장"
                android:textStyle="bold"
                android:layout_weight="1"
                android:backgroundTint="#FC5230"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
